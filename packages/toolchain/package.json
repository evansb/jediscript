{
  "name": "source-toolchain",
  "version": "2.0.0",
  "description": "Toolchain for Source language",
  "main": "es5/main.js",
  "typings": "definitions/main.d.ts",
  "repository": "https://github.com/evansb/source-toolchain",
  "author": "Evan Sebastian <evanlhoini@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --parser typescript --no-semi --single-quote --write '{src,test}/**/*.ts'",
    "prepublishOnly": "npm run clean && npm run compile",
    "clean": "rimraf definitions es6 es5",
    "compile": "rimraf definitions && tsc -p tsconfig.compile.json --rootDir src --outDir es6 --declarationDir definitions && babel es6 --out-dir es5",
    "lint": "tslint -c tslint.json --type-check --project tsconfig.json ./src/**/*.ts ./test/**/*.ts",
    "test-watch": "DEBUG=test jest --watch --verbose",
    "test": "jest --no-cache --coverage",
    "test-ci": "npm run test && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "dependencies": {
    "@types/acorn": "^4.0.2",
    "@types/common-tags": "^1.2.5",
    "@types/estree": "^0.0.35",
    "@types/invariant": "^2.2.28",
    "acorn": "^5.0.3",
    "astring": "^1.0.2",
    "babel-runtime": "^6.23.0",
    "common-tags": "^1.4.0",
    "eventemitter2": "^4.1.0",
    "immutable": "^3.8.1",
    "invariant": "^2.2.2"
  },
  "devDependencies": {
    "@types/debug": "^0.0.29",
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.22",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "coveralls": "^2.13.1",
    "debug": "^2.6.8",
    "jest": "^20.0.3",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.4",
    "tslint": "^5.4.3",
    "typescript": "^2.5.0-dev.20170619"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/__tests__/fixtures/.*\\.(ts|tsx|js)$"
    ]
  },
  "false": {}
}
