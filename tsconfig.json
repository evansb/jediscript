{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es2015",
    "sourceMap": true,
    "outDir": "es6",
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "typings/globals",
    "typings/shims",
    "typings/index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false,
    "useCache": true,
    "forkChecker": true
  }
}
